<%- include("partials/header") %>

<section class="flex justify-center items-center min-h-screen bg-[var(--color-fondo-principal)]">
  <form action="/login" method="POST" class="bg-[var(--color-fondo-secundario)] p-8 rounded-lg shadow-soft w-full max-w-md space-y-6">
    <h2 class="text-3xl font-titulo text-center text-[var(--color-acento-cosmico)]">Iniciar Sesión</h2>

    <div>
      <label for="username" class="block text-sm mb-1 text-[var(--color-texto-secundario)]">Usuario</label>
      <input type="text" name="username" id="username" required class="w-full px-3 py-2 rounded bg-[var(--color-fondo-principal)] text-white border border-gray-500 focus:outline-none focus:ring-2 focus:ring-[var(--color-acento-lunar)]">
    </div>

    <div>
      <label for="password" class="block text-sm mb-1 text-[var(--color-texto-secundario)]">Contraseña</label>
      <input type="password" name="password" id="password" required class="w-full px-3 py-2 rounded bg-[var(--color-fondo-principal)] text-white border border-gray-500 focus:outline-none focus:ring-2 focus:ring-[var(--color-acento-lunar)]">
    </div>

    <button type="submit" class="w-full py-2 bg-[var(--color-boton-cta)] hover:bg-[var(--color-hover-glow)] text-white rounded font-bold transition">
      Entrar
    </button>
  </form>
</section>

<%- include("partials/footer") %>