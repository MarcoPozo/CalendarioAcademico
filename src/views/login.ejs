<%- include("partials/header") %>

<section class="flex justify-center items-center min-h-screen bg-azul-medio">
  <form action="/login" method="POST" class="bg-negro-azulado p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-verde-menta mb-6">Iniciar Sesión</h2>

    <div class="mb-4">
      <label for="username" class="block text-sm mb-1">Usuario</label>
      <input type="text" name="username" id="username" required class="w-full px-3 py-2 rounded bg-azul-petroleo text-white border border-gris-azulado focus:outline-none focus:ring-2 focus:ring-verde-menta">
    </div>

    <div class="mb-6">
      <label for="password" class="block text-sm mb-1">Contraseña</label>
      <input type="password" name="password" id="password" required class="w-full px-3 py-2 rounded bg-azul-petroleo text-white border border-gris-azulado focus:outline-none focus:ring-2 focus:ring-verde-menta">
    </div>

    <button type="submit" class="w-full bg-rojo-intenso hover:bg-rojo-oscuro text-white py-2 rounded transition-colors">
      Entrar
    </button>
  </form>
</section>

<%- include("partials/footer") %>
